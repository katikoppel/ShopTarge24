@model ShopTARge24.Models.Spaceships.SpaceshipCreateUpdateViewModel

@if (Model.Id.HasValue)
{
    <h1>Update</h1>
}
else
{
    <h1>Create</h1>
}

<div>
	<form method="post" enctype="multipart/form-data">
		<input asp-for="Id" type="hidden" />
		<input asp-for="CreatedAt" type="hidden" />
		<input asp-for="ModifiedAt" type="hidden" />

		<div class="form-group row">
			<label asp-for="Name" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input id="testIdNameCU" asp-for="Name" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="Classification" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input id="testIdClassificationCU" asp-for="Classification" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="BuiltDate" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input id="testIdBuiltDateCU" asp-for="BuiltDate" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="Crew" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input id="testIdCrewCU" asp-for="Crew" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="EnginePower" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input id="testIdEnginePowerCU" asp-for="EnginePower" class="form-control" />
			</div>
		</div>

		<div class="form-group row">
			<label asp-for="Files" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-5">
				<div class="custom-file">
					<input class="form-control" asp-for="Files" multiple type="file" />
				</div>
			</div>
		</div>

		@foreach (var images in Model.Image)
		{
			<partial name="_Images" model="images" />
			<input asp-action="removeImage" asp-controller="spaceships" asp-route-imageId="@images.ImageId" type="submit" class="btn btn-success" value="Remove image" />
		}

		@if (Model.Id.HasValue)
		{
			<input id="testIdUpdateCU" asp-action="update" asp-controller="spaceships" type="submit" class="btn btn-success" value="Update" />
		}
		else
		{
			<input id="testIdCreateCU" asp-action="create" asp-controller="spaceships" type="submit" class="btn btn-success" value="Create" />
		}
		
		<a id="testIdIndexCU" asp-action="Index" asp-controller="spaceships" class="btn btn-primary">Back</a>
	</form>
</div>
