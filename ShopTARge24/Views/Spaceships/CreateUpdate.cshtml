@model ShopTARge24.Models.Spaceships.SpaceshipCreateUpdateViewModel

@if (Model.Id.HasValue)
{
    <h1>Update</h1>
}
else
{
    <h1>Create</h1>
}

<div>
    <form method="post" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden" />
        <input asp-for="CreatedAt" type="hidden" />
        <input asp-for="ModifiedAt" type="hidden" />

        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input id="testIdNameCU" asp-for="Name" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Classification" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input id="testIdClassificationCU" asp-for="Classification" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="BuiltDate" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input id="testIdBuiltDateCU" asp-for="BuiltDate" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Crew" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input id="testIdCrewCU" asp-for="Crew" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="EnginePower" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input id="testIdEnginePowerCU" asp-for="EnginePower" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Files" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Files" multiple type="file" />
            </div>
        </div>

        @if (Model.Image != null && Model.Image.Any())
        {
            <div class="d-flex flex-column gap-3">
                @foreach (var images in Model.Image)
                {
                    <div class="image-row position-relative">
                        <div class="image-preview">
                            <partial name="_Images" model="images" />
                        </div>
                        <form asp-action="removeImage" asp-controller="spaceships" asp-route-imageId="@images.ImageId" method="post" class="m-0 remove-btn-form">
                            <button type="submit" class="btn btn-sm btn-danger">
                                Remove image
                            </button>
                        </form>
                    </div>
                }
            </div>
        }

        <div class="mt-4 d-flex gap-2">
            @if (Model.Id.HasValue)
            {
                <button id="testIdUpdateCU" asp-action="update" asp-controller="spaceships" type="submit" class="btn btn-primary">
                    Update
                </button>
            }
            else
            {
                <button id="testIdCreateCU" asp-action="create" asp-controller="spaceships" type="submit"class="btn btn-primary">
                    Create
                </button>
            }

            <a id="testIdIndexCU" asp-action="Index" asp-controller="spaceships" class="btn btn-success">
                Back
            </a>
        </div>
    </form>
</div>

<style>
    .image-row {
        display: inline-block;
        padding-left: 110px;
    }

    .remove-btn-form {
        position: absolute;
        left: 0;
        top: 32px;
    }
</style>