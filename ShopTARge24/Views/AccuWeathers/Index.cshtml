@model ShopTARge24.Models.AccuWeathers.AccuWeathersSearchViewModel

<h1>Search City</h1>

<div class="container">
    <form method="post">
        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
                <h4>Search the forecast in a city</h4>
                <label asp-for="CityName" style="font: Arial"></label>
                <input asp-for="CityName" class="form-control" />
                <span asp-validation-for="CityName" class="text-danger"></span>
            </div>
        </div>
        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
                <button asp-controller="accuWeathers" asp-action="searchCity" class="btn btn-primary mt-2">Search</button>
            </div>
        </div>
    </form>
</div> 