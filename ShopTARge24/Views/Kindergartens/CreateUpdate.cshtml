@model ShopTARge24.Models.Kindergartens.KindergartenCreateUpdateViewModel

@if (Model.Id.HasValue)
{
    <h1>Update</h1>
}
else
{
    <h1>Create</h1>
}

<div>
    <form method="post" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden" />
        <input asp-for="CreatedAt" type="hidden" />
        <input asp-for="UpdatedAt" type="hidden" />

        <div class="form-group row">
            <label asp-for="GroupName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input id="testIdGroupNameCU" asp-for="GroupName" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="ChildrenCount" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input id="testIdChildrenCountCU" asp-for="ChildrenCount" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="KindergartenName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input id="testIdKindergartenNameCU" asp-for="KindergartenName" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="TeacherName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input id="testIdTeacherNameCU" asp-for="TeacherName" class="form-control" />
            </div>
        </div>

        <div>
            @foreach (var images in Model.Images)
            {
                <partial name="_Images" model="images" />
            }
        </div>

        <div class="form-group row">
            <label asp-for="Files" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-5">
                <input class="form-control" asp-for="Files" multiple type="file" />
            </div>
        </div>

        @if (Model.Id.HasValue)
        {
            <input id="testIdUpdateCU" asp-action="update" asp-controller="kindergartens" type="submit" class="btn btn-success" value="Update" />
        }
        else
        {
            <input id="testIdCreateCU" asp-action="create" asp-controller="kindergartens" type="submit" class="btn btn-success" value="Create" />
        }

        <a id="testIdIndexCU" asp-action="Index" asp-controller="kindergartens" class="btn btn-success">Back</a>
    </form>
</div>
