<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SignalR Chat</title>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>

    <style>
        .chat-container {
            max-width: 700px;
            margin: 40px auto;
        }
        .chat-box {
            height: 350px;
            overflow-y: auto;
            border: 1px solid #dee2e6;
            background: white;
            border-radius: 6px;
            padding: 12px;
        }
        .message {
            margin-bottom: 10px;
            padding: 6px 10px;
            border-radius: 6px;
        }
            .message strong {
                font-size: 0.85rem;
                color: crimson;
            }
    </style>
</head>

<body>
    <div class="chat-container">
        <h3 class="mb-3">Chat</h3>

        <div id="chatBox" class="chat-box mb-3">
            <ul id="messagesList" class="list-unstyled mb-0"></ul>
        </div>

        <div class="row g-2">
            <div class="col-md-3">
                <input id="userInput" type="text" class="form-control" placeholder="Your name" />
            </div>
            <div class="col-md-7">
                <input id="messageInput" type="text" class="form-control" placeholder="Type a message…" />
            </div>
            <div class="col-md-2 d-grid">
                <button id="sendButton" class="btn btn-primary">Send</button>
            </div>
        </div>
    </div>

    <script>
        const sendButton = document.getElementById("sendButton");
        const messageInput = document.getElementById("messageInput");
        const userInput = document.getElementById("userInput");
        const messagesList = document.getElementById("messagesList");
        const chatBox = document.getElementById("chatBox");

        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/chathub")
            .build();

        connection.start()
            .catch(err => console.error("SignalR Connection Error:", err));

        connection.on("ReceiveMessage", (user, message) => {
            const li = document.createElement("li");
            li.classList.add("message");
            li.innerHTML = `<strong>${user || "Anonymous"}:</strong> ${message}`;
            messagesList.appendChild(li);
        });

        function sendMessage() {
            const user = userInput.value.trim() || "Anonymous";
            const message = messageInput.value.trim();
            if (!message) return;

            connection.invoke("SendMessage", user, message)
                .catch(err => console.error(err));

            messageInput.value = "";
            messageInput.focus();
        }

        sendButton.addEventListener("click", sendMessage);

        messageInput.addEventListener("keydown", (e) => {
            if (e.key === "Enter") {
                e.preventDefault();
                sendMessage();
            }
        });
    </script>
</body>
</html>
