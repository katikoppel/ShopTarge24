@model ShopTARge24.Models.OpenWeathers.OpenWeatherSearchViewModel

<h1>Search</h1>
<div class="container">
    <form method="post">
        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
                <h5>Search for a city:</h5>
                <label asp-for="CityName" style="font: Arial"></label>
                <input asp-for="CityName" class="form-control" />
                <span asp-validation-for="CityName" class="text-danger"></span>
            </div>
        </div>
        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5 mt-3">
                <button asp-controller="OpenWeathers" asp-action="SearchCity" class="btn btn-success">
                    Search
                </button>
            </div>
        </div>
    </form>
</div>