@model ShopTARge24.Models.ChuckNorris.ChuckNorrisViewModel

<div class="container">
    <h2>Random Chuck Norris Joke</h2>
    <hr />
    <dl class="row text-dark">
        <div>
            <dt class="col-sm-2">
             Joke:
            </dt>
            <dd class="col-sm-10">
                “@Html.DisplayFor(model => model.Value)”
            </dd>
        </div>
        <div>
            <dt class="col-sm-2">
             Joke Id:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Id)
            </dd>
        </div>
        <div>
            <dt class="col-sm-2">
             Link:
            </dt>
            <dd class="col-sm-10">
                <a href="@Model.Url" target="_blank" class="text-decoration-none">
                    @Model.Url
                </a>
            </dd>
        </div>
    </dl>

    <div class="mt-4">
        <a asp-action="Index" asp-controller="ChuckNorris" class="btn btn-primary">
            Another joke
        </a>
    </div>
</div>
