@model ShopTARge24.Models.Accounts.LoginViewModel

<div class="row">
    <div class="col-md-6">
        <h3>Local Account Login</h3>
		<hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <form asp-action="Login" method="post">

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group form-check mt-2">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label"></label>
            </div>

            <button type="submit" class="btn btn-primary mt-2">Login</button>

            <div class="mt-2">
                <a asp-action="ForgotPassword">Forgot Password?</a>
            </div>
        </form>
    </div>

    <div class="col-md-6">
        <h3>External Login</h3>
		<hr />
        <form asp-controller="Accounts" asp-action="ExternalLogin" asp-route-returnUrl="@Context.Request.Query["ReturnUrl"]" method="post">
            <div>
                <button type="submit" class="btn btn-outline-primary d-flex align-items-center gap-2" name="provider" value="Google">
                    <img src="~/images/gmail.svg" width="18" />Log In
                </button>
            </div>
        </form>
        <br />
        <form asp-controller="Accounts" asp-action="ExternalLogin" asp-route-returnUrl="@Context.Request.Query["ReturnUrl"]" method="post">
            <div>
                <button type="submit" class="btn btn-outline-primary d-flex align-items-center gap-2" name="provider" value="Facebook">
                    <img src="~/images/facebook.svg" width="18"/> Log In
                </button>
            </div>
        </form>
    </div>
</div>
